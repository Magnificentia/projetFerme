<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.BatimentEntity" table="batiment" schema="volailledor">
        <id name="idBat">
            <column name="idBat" sql-type="int(10) unsigned"/>
        </id>
        <property name="surface">
            <column name="surface" sql-type="decimal(5,2)" precision="5" scale="2"/>
        </property>
        <property name="nomBat">
            <column name="nomBat" sql-type="varchar(10)" length="10"/>
        </property>
    </class>
</hibernate-mapping>